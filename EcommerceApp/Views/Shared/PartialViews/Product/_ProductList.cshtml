@using EcommerceApp.Models
@using Microsoft.EntityFrameworkCore.Metadata.Internal

@model ICollection<ProductViewModel>

<div class="card">
    <div class="card-header text-uppercase text-md-center">
        Customer List
    </div>
    <div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <td>Name</td>
                <td>Code</td>
                <td>Price</td>
                <td>Category</td>
            </tr>
            </thead>
            <tbody>
            @{
                foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Code</td>
                        <td>@product.Price</td>
                        <td>@product.Category</td>
                        <td><a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn badge-info">Edit</a></td>
                        <td><a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>