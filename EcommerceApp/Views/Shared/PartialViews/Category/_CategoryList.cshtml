@model IEnumerable<EcommerceApp.Models.CategoryViewModel>

<p>
    <a asp-controller="Category" asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <td>Name</td>
    </tr>
    </thead>
    <tbody>
    @{
        foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td><a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn badge-info">Edit</a></td>
                <td><a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn badge-danger">Delete</a></td>
            </tr>
        }
    }
    </tbody>
</table>
