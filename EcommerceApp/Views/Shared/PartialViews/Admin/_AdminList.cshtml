@model ICollection<EcommerceApp.Models.AdminViewModel>

<p>
    <a asp-action="Create" asp-controller="Admin">Create New</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <td>Name</td>
        <td>Email</td>
    </tr>
    </thead>
    <tbody>
    @{
        foreach (var admin in Model)
        {
            <tr>
                <td>@admin.Name</td>
                <td>@admin.Email</td>
                <td><a asp-controller="Admin" asp-action="Edit" asp-route-id="@admin.Id" class="btn badge-info">Edit</a></td>
                <td><a asp-controller="Admin" asp-action="Delete" asp-route-id="@admin.Id" class="btn badge-danger">Delete</a></td>
            </tr>
        }
    }
    </tbody>
</table>
