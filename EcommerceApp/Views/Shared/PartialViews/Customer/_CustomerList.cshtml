@using Microsoft.EntityFrameworkCore.Metadata.Internal

@model List<Customer>

<div class="card">
    <div class="card-header text-uppercase text-md-center">
        Customer List
    </div>
    <div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Phone</td>
                    <td>Address</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (Customer customer in Model)
                    {
                        <tr>
                            <td>@customer.Name</td>
                            <td>@customer.Phone</td>
                            <td>@customer.Address</td>
                            <td><a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.Id" class="btn badge-info">Edit</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>