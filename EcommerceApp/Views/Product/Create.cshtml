@model EcommerceApp.Models.ProductViewModel

<h1>Product Create</h1>
<div class="card">
    <div class="card-header text-md-center text-uppercase">
        Product Create
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" asp-controller="Product">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Enter Name" asp-for="Name">
                <span asp-validation-for="Name" class="d-block text-danger"></span>
            </div>
            <div class="form-group">
                <label for="code">Product Code</label>
                <input type="text" class="form-control" id="code" placeholder="Enter Code" asp-for="Code">
                <span asp-validation-for="Code" class="d-block text-danger"></span>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="number" class="form-control" id="price" placeholder="Enter Price" asp-for="Price">
                <span asp-validation-for="Price" class="d-block text-danger"></span>
            </div>

            <div class="form-group">
                <label for="category">Category</label>
                <select class="form-control" id="category" asp-for="CategoryId" asp-items="Model.CategorySelectListItems">
                    <option value="">--Select--</option>
                    
                </select>
            </div>


            <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
        </form>
    </div>
</div>



